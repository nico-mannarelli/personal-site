---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact">
  <div>
    <h2 class="text-2xl font-bold mb-4">Contact</h2>
    <div class="space-y-4 text-base leading-relaxed">
      <p>
        Get in touch with me for collaborations, opportunities, or just to connect.
      </p>
      
      <div class="space-y-2 pt-4">
        <div>
          <h3 class="font-semibold mb-1">Email</h3>
          <a href="mailto:your.email@example.com" class="underline">
            your.email@example.com
          </a>
        </div>
        <div>
          <h3 class="font-semibold mb-1">GitHub</h3>
          <a href="https://github.com/yourusername" target="_blank" rel="noopener noreferrer" class="underline">
            github.com/yourusername
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>