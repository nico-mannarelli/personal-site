---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = (await getCollection('projects')).sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime()
);
---

<BaseLayout title="Projects">
  <div>
    <h2 class="text-2xl font-bold mb-4">Projects</h2>
    <p class="mb-8 text-base">A selection of my work in systems programming, quantum ML, and defense tech.</p>

    <div class="space-y-8">
      {projects.map((project) => (
        <article class="border-b border-gray-200 pb-8">
          <div class="flex items-start justify-between mb-2">
            <h3 class="text-xl font-semibold">{project.data.title}</h3>
            <time class="text-sm text-gray-500">
              {project.data.date.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'short' 
              })}
            </time>
          </div>
          
          <p class="text-base mb-4 leading-relaxed">{project.data.description}</p>
          
          <div class="flex flex-wrap gap-2 mb-4">
            {project.data.tags.map((tag) => (
              <span class="text-sm text-gray-600">
                {tag}
              </span>
            ))}
          </div>
          
          <div class="flex gap-4">
            {project.data.github && (
              <a 
                href={project.data.github} 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-sm underline"
              >
                GitHub
              </a>
            )}
            {project.data.demo && (
              <a 
                href={project.data.demo} 
                target="_blank" 
                rel="noopener noreferrer"
                class="text-sm underline"
              >
                Demo
              </a>
            )}
          </div>
        </article>
      ))}
    </div>

    {projects.length === 0 && (
      <div class="text-center py-12 text-gray-500">
        <p>No projects yet. Check back soon!</p>
      </div>
    )}
  </div>
</BaseLayout>