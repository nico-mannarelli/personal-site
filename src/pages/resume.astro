---
import BlogLayout from '../layouts/BlogLayout.astro';
import { site } from '../config/site';
import { profile } from '../config/profile';
---

<BlogLayout title={`${site.name} - Resume`}>
  <div class="page-wrapper">
    <!-- Site Header -->
    <header class="site-header">
      <h1 class="site-title">
        <a href="/">{site.name}</a>
      </h1>
      <nav class="site-navigation">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/portfolio">Portfolio</a></li>
          <li><a href="/resume">Resume</a></li>
        </ul>
      </nav>
    </header>

    <!-- Main Content Card -->
    <main class="main entry-content">
      <h2>Resume</h2>
      
      <div style="display: grid; grid-template-columns: 1fr 2fr; gap: 2rem; margin-top: 2em;" class="resume-grid">
        <!-- Left Column: Profile Information -->
        <div style="min-width: 0;">
        <!-- Profile Picture -->
        <div class="mb-6">
          <img 
            src={profile.profileImage} 
            alt={profile.name} 
            style="width: 120px; height: 120px; border-radius: 50%; object-fit: cover;"
          />
        </div>

        <!-- Name and Title -->
        <div class="mb-6">
          <h3 style="font-family: Georgia, serif; font-size: 1.3em; font-weight: bold; margin-bottom: 0.3em;">{profile.name}</h3>
          <p style="font-size: 1em; color: #666; margin-bottom: 0.5em;">{profile.title}</p>
        </div>

        <!-- Summary -->
        <p class="text-sm text-gray-700 mb-6 leading-relaxed">
          Passionate about building scalable systems, quantum machine learning, and defense technology.
        </p>

        <!-- Contact Information -->
        <div class="space-y-3 text-sm">
          <div style="margin-bottom: 0.5em;">
            <span style="font-size: 0.9em; color: #333;">{profile.email}</span>
          </div>
          <div style="margin-bottom: 0.5em;">
            <span style="font-size: 0.9em; color: #333;">{profile.location}</span>
          </div>
          <div style="display: flex; gap: 0.5em; margin-top: 0.5em;">
            <a href={profile.social.github} target="_blank" rel="noopener noreferrer" style="display: inline-flex; align-items: center;">
              <svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24" style="color: #666;">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </a>
            <a href={profile.social.linkedin} target="_blank" rel="noopener noreferrer" style="display: inline-flex; align-items: center;">
              <svg width="16" height="16" fill="currentColor" viewBox="0 0 24 24" style="color: #666;">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- Right Column: Skills and Experience -->
        <div style="min-width: 0;">
        <!-- Core Skills Section -->
        <section style="margin-bottom: 2em;">
          <div style="margin-bottom: 1.5em;">
            <h3 style="font-family: Georgia, serif; font-size: 1.1em; font-weight: bold; margin-bottom: 0.5em;">Languages</h3>
            <p style="line-height: 1.6;">
              {profile.skills.languages.join(', ')}
            </p>
          </div>

          <div style="margin-bottom: 1.5em;">
            <h3 style="font-family: Georgia, serif; font-size: 1.1em; font-weight: bold; margin-bottom: 0.5em;">Frameworks/Libraries</h3>
            <p style="line-height: 1.6;">
              {profile.skills.frameworks.join(', ')}
            </p>
          </div>

          <div style="margin-bottom: 1.5em;">
            <h3 style="font-family: Georgia, serif; font-size: 1.1em; font-weight: bold; margin-bottom: 0.5em;">Developer Tools</h3>
            <p style="line-height: 1.6;">
              {profile.skills.tools.join(', ')}
            </p>
          </div>
        </section>

        <!-- Experience Section -->
        <section>
          <h3 style="font-family: Georgia, serif; font-size: 1.3em; font-weight: bold; margin-bottom: 1em; margin-top: 1em;">Experience</h3>
          <div style="display: flex; flex-direction: column; gap: 1.5em;">
            {profile.experience.map((exp) => (
              <div style="display: flex; gap: 1em; position: relative; padding-left: 1.5em;">
                <div style="position: absolute; left: 0; top: 0.5em; width: 8px; height: 8px; background: #333; border-radius: 50%; flex-shrink: 0;"></div>
                <div style="flex: 1; min-width: 0;">
                  <h4 style="font-weight: bold; font-size: 1.1em; margin-bottom: 0.3em;">{exp.title}</h4>
                  <p style="color: #666; margin-bottom: 0.3em; font-size: 0.95em;">{exp.company}</p>
                  <p style="color: #999; font-size: 0.9em; margin-bottom: 0.5em;">{exp.dateRange} {exp.location && `â€¢ ${exp.location}`}</p>
                  <ul style="list-style-type: disc; list-style-position: inside; padding-left: 0; line-height: 1.6; font-size: 0.95em;">
                    {exp.bullets.map((bullet) => (
                      <li style="margin-bottom: 0.4em; word-wrap: break-word;">{bullet}</li>
                    ))}
                  </ul>
                </div>
              </div>
            ))}
          </div>
        </section>
        </div>
      </div>
    </main>
  </div>
</BlogLayout>

<style>
  @media only screen and (max-width: 727px) {
    .resume-grid {
      display: block !important;
    }
    .resume-grid > div:first-child {
      margin-bottom: 2em;
    }
  }
</style>