---
import BlogLayout from '../layouts/BlogLayout.astro';
import { site } from '../config/site';
import { profile } from '../config/profile';
---

<BlogLayout title={`${site.name} - Resume`}>
  <div class="page-wrapper">
    <!-- Site Header -->
    <header class="site-header">
      <h1 class="site-title">
        <a href="/">{site.name}</a>
      </h1>
      <nav class="site-navigation">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/portfolio">Portfolio</a></li>
          <li><a href="/resume">Resume</a></li>
          <li><a href="/extra">Extra</a></li>
        </ul>
      </nav>
    </header>

    <!-- Main Content Card -->
    <main class="main entry-content">
      <h2>Resume</h2>

      <!-- Download Resume PDF -->
      <p style="margin-bottom: 1em;">
        <a href="/nicomannarelli_resume%20(1).pdf" download class="underline">Download PDF Resume</a>
      </p>

      <!-- Profile Photo -->
      <div class="entry-feature">
        <img 
          src={profile.profileImage} 
          alt={profile.name}
        />
      </div>

      <!-- Contact Information -->
      <p>
        <strong>Email:</strong> <a href={`mailto:${profile.email}`} class="underline">{profile.email}</a><br />
        <strong>Location:</strong> {profile.location}<br />
        {profile.social.github && (
          <>
            <strong>GitHub:</strong> <a href={profile.social.github} target="_blank" rel="noopener noreferrer" class="underline">GitHub</a><br />
          </>
        )}
        {profile.social.linkedin && (
          <>
            <strong>LinkedIn:</strong> <a href={profile.social.linkedin} target="_blank" rel="noopener noreferrer" class="underline">LinkedIn</a>
          </>
        )}
      </p>

      <!-- Skills Section -->
      <h3>Technical Skills</h3>
      
      <p>
        <strong>Languages:</strong> {profile.skills.languages.join(', ')}
      </p>

      <p>
        <strong>Frameworks/Libraries:</strong> {profile.skills.frameworks.join(', ')}
      </p>

      <p>
        <strong>Developer Tools:</strong> {profile.skills.tools.join(', ')}
      </p>

      <!-- Experience Section -->
      <h3>Experience</h3>
      
      {profile.experience.map((exp) => (
        <div style="margin-bottom: 2em;">
          <h4>{exp.title}</h4>
          <p style="color: #666; margin-bottom: 0.5em;">{exp.company}</p>
          <p style="color: #999; font-size: 0.9em; margin-bottom: 0.5em;">{exp.dateRange} {exp.location && `â€¢ ${exp.location}`}</p>
          <ul>
            {exp.bullets.map((bullet) => (
              <li>{bullet}</li>
            ))}
          </ul>
        </div>
      ))}
    </main>
  </div>
</BlogLayout>
